@{
    ViewData["Title"] = "Phong trào thi đua";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 text-info">
                        <i class="bi bi-trophy me-3"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-muted mb-0">Quản lý các phong trào thi đua và danh sách người đạt được</p>
                </div>
                <a asp-action="Create" class="btn btn-info btn-lg px-4">
                    <i class="bi bi-plus-circle me-2"></i>Thêm phong trào mới
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-trophy text-info fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-info mb-1" id="totalPhongTrao">-</h4>
                    <p class="text-muted mb-0">Tổng phong trào</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-people text-success fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-success mb-1" id="totalNguoiDatDuoc">-</h4>
                    <p class="text-muted mb-0">Người đạt được</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-calendar-event text-warning fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-warning mb-1" id="dangHoatDong">-</h4>
                    <p class="text-muted mb-0">Đang hoạt động</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-secondary bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-calendar-check text-secondary fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-secondary mb-1" id="daKetThuc">-</h4>
                    <p class="text-muted mb-0">Đã kết thúc</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-white border-0 py-3" style="border-radius: 15px 15px 0 0;">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-info">
                    <i class="bi bi-table me-2"></i>Danh sách phong trào thi đua
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-info btn-sm" onclick="table.ajax.reload()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="phongTraoTable" class="table table-hover mb-0" style="width:100%">
                    <thead class="table-info">
                        <tr>
                            <th class="text-center" style="width: 80px">Mã</th>
                            <th>Tên phong trào</th>
                            <th class="text-center" style="width: 120px">Bắt đầu</th>
                            <th class="text-center" style="width: 120px">Kết thúc</th>
                            <th class="text-center" style="width: 100px">% thưởng</th>
                            <th class="text-center" style="width: 120px">Số người đạt</th>
                            <th>Mô tả</th>
                            <th class="text-center" style="width: 150px">Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script>
        let table;
        
        $(document).ready(function() {
            table = $('#phongTraoTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetData")',
                    type: 'GET',
                    datatype: 'json',
                    dataSrc: function(json) {
                        updateStatistics(json.data);
                        return json.data;
                    }
                },
                columns: [
                    { 
                        data: 'maPttd',
                        className: 'text-center fw-bold'
                    },
                    { 
                        data: 'tenPhongTrao',
                        className: 'fw-semibold'
                    },
                    { 
                        data: 'thoiGianBatDau',
                        className: 'text-center',
                        render: function(data) {
                            return data ? moment(data).format('DD/MM/YYYY') : '<span class="text-muted">-</span>';
                        }
                    },
                    { 
                        data: 'thoiGianKetThuc',
                        className: 'text-center',
                        render: function(data) {
                            return data ? moment(data).format('DD/MM/YYYY') : '<span class="text-muted">-</span>';
                        }
                    },
                    { 
                        data: 'phanTramKhenThuong',
                        className: 'text-center',
                        render: function(data) {
                            return data ? `<span class="badge bg-info">${data}%</span>` : '<span class="text-muted">-</span>';
                        }
                    },
                    { 
                        data: 'soNguoiDatDuoc',
                        className: 'text-center',
                        render: function(data) {
                            return data > 0 ? `<span class="badge bg-success">${data}</span>` : '<span class="badge bg-secondary">0</span>';
                        }
                    },
                    { 
                        data: 'moTa',
                        render: function(data) {
                            if (!data) return '<span class="text-muted">Không có mô tả</span>';
                            return data.length > 50 ? data.substring(0, 50) + '...' : data;
                        }
                    },
                    {
                        data: 'maPttd',
                        orderable: false,
                        className: 'text-center',
                        render: function(data, type, row) {
                            const isActive = isPhongTraoActive(row.thoiGianBatDau, row.thoiGianKetThuc);
                            const statusBadge = isActive ? 
                                '<span class="badge bg-success me-1">Đang hoạt động</span>' : 
                                '<span class="badge bg-secondary me-1">Đã kết thúc</span>';
                            
                            return `
                                <div class="d-flex flex-column gap-1">
                                    ${statusBadge}
                                    <div class="btn-group btn-group-sm">
                                        <a href="@Url.Action("Details")/${data}" class="btn btn-outline-info" title="Xem chi tiết">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a href="@Url.Action("Edit")/${data}" class="btn btn-outline-warning" title="Sửa">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                        <a href="@Url.Action("Delete")/${data}" class="btn btn-outline-danger" title="Xóa">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </div>`;
                        }
                    }
                ],
                language: { 
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json',
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ bản ghi",
                    info: "Hiển thị _START_ đến _END_ trong tổng số _TOTAL_ bản ghi",
                    infoEmpty: "Không có bản ghi nào",
                    infoFiltered: "(được lọc từ _MAX_ bản ghi)",
                    zeroRecords: "Không tìm thấy bản ghi nào"
                },
                pageLength: 10,
                order: [[0, 'desc']],
                responsive: true,
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                drawCallback: function() {
                    // Thêm hiệu ứng hover cho các nút
                    $('.btn-group .btn').hover(
                        function() { $(this).addClass('shadow-sm'); },
                        function() { $(this).removeClass('shadow-sm'); }
                    );
                }
            });
        });

        function updateStatistics(data) {
            const totalPhongTrao = data.length;
            const totalNguoiDatDuoc = data.reduce((sum, item) => sum + (item.soNguoiDatDuoc || 0), 0);
            const dangHoatDong = data.filter(item => isPhongTraoActive(item.thoiGianBatDau, item.thoiGianKetThuc)).length;
            const daKetThuc = totalPhongTrao - dangHoatDong;

            $('#totalPhongTrao').text(totalPhongTrao);
            $('#totalNguoiDatDuoc').text(totalNguoiDatDuoc);
            $('#dangHoatDong').text(dangHoatDong);
            $('#daKetThuc').text(daKetThuc);
        }

        function isPhongTraoActive(startDate, endDate) {
            if (!startDate || !endDate) return false;
            
            const now = moment();
            const start = moment(startDate);
            const end = moment(endDate);
            
            return now.isBetween(start, end, 'day', '[]');
        }
    </script>
}

<style>
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-1px);
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        background-color: #e3f2fd !important;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .btn-group .btn {
        border-radius: 6px !important;
    }
    
    .dataTables_wrapper .dataTables_length select,
    .dataTables_wrapper .dataTables_filter input {
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 6px;
        margin: 0 2px;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background: #17a2b8 !important;
        border-color: #17a2b8 !important;
    }
    
    .rounded-circle {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

