@model QLHV.Models.Nguoi
@{
    ViewData["Title"] = "Xóa học viên Lào";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>@ViewData["Title"]
        </h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Quay lại
        </a>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="alert alert-warning" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-exclamation-triangle me-2"></i>Cảnh báo!
                </h5>
                <p class="mb-0">Bạn có chắc chắn muốn xóa học viên này? Hành động này không thể hoàn tác.</p>
            </div>

            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0 text-info">
                        <i class="bi bi-person-lines-fill me-2"></i>Thông tin học viên sẽ bị xóa
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã học viên:</dt>
                        <dd class="col-sm-8">@Model.MaNguoi></dd>
                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.
                            HoTen</dd>
                        <dt class="col-sm-4">Quốc tịch:</dt>
                        <dd class="col-sm-8"><span class="badge bg-info">@Model.QuocTich</span></dd>
                        <dt class="col-sm-4">Ngày sinh:</dt>
                        <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Cấp bậc:</dt>
                        <dd class="col-sm-8">@(Model.CapBac ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Trình độ:</dt>
                        <dd class="col-sm-8">@(Model.MaTrinhDoNavigation?.TenTrinhDo ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Chuyên ngành:</dt>
                        <dd class="col-sm-8">@(Model.ChuyenNganh ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Khóa học:</dt>
                        <dd class="col-sm-8">@(Model.KhoaHoc ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Ngày nhập học:</dt>
                        <dd class="col-sm-8">@(Model.NgayNhapHoc?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Ngày tốt nghiệp:</dt>
                        <dd class="col-sm-8">@(Model.NgayTotNghiep?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                    </dl>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6">
                    <div class="card shadow border-0 mb-3">
                        <div class="card-header bg-light py-2">
                            <h6 class="mb-0 text-info"><i class="bi bi-award me-2"></i>Thông tin Đảng</h6>
                        </div>
                        <div class="card-body">
                            <dl class="mb-0">
                                <dt>Loại đảng viên:</dt>
                                <dd>@(Model.MaLoaiDangVienNavigation?.TenLoai ?? "Không là đảng viên")</dd>
                                <dt>Ngày vào Đảng dự bị:</dt>
                                <dd>@(Model.NgayVaoDangDuBi?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                                <dt>Ngày vào Đảng chính thức:</dt>
                                <dd>@(Model.NgayVaoDangChinhThuc?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                            </dl>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="card shadow border-0">
                        <div class="card-header bg-light py-2">
                            <h6 class="mb-0 text-info"><i class="bi bi-bar-chart me-2"></i>Thống kê</h6>
                        </div>
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <span>Kết quả học tập:</span>
                                <span class="badge bg-info">@(Model.KetQuaHocTaps?.Count ?? 0)</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="MaNguoi" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Xác nhận xóa
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i>Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
