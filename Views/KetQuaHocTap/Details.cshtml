@model QLHV.Models.KetQuaHocTap
@{
    ViewData["Title"] = "Chi tiết kết quả học tập";
    var userRole = Context.Session.GetString("UserRole") ?? string.Empty;
    bool canManage = userRole == "Admin" || userRole == "LopTruongLao" || userRole == "LopTruongCam";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="bg-info bg-gradient rounded-circle p-3 me-3">
                        <i class="bi bi-eye-fill text-white fs-4"></i>
                    </div>
                    <div>
                        <h2 class="text-dark mb-1 fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted mb-0">Xem chi tiết thông tin kết quả học tập</p>
                    </div>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-arrow-left me-2"></i>Quay lại
                    </a>
                    @if (canManage)
                    {
                        <a asp-action="Edit" asp-route-id="@Model.MaKetQua" class="btn btn-warning btn-lg">
                            <i class="bi bi-pencil me-2"></i>Sửa
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-info text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Thông tin chi tiết
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Thông tin học viên -->
                        <div class="col-12 mb-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary mb-3">
                                        <i class="bi bi-person-badge me-2"></i>Thông tin học viên
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Mã học viên:</strong>
                                                <span class="badge bg-primary ms-2">@Model.MaNguoi</span>
                                            </p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Họ và tên:</strong>
                                                <span class="ms-2">@(Model.MaNguoiNavigation?.HoTen ?? "N/A")</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin học kỳ -->
                        <div class="col-12 mb-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary mb-3">
                                        <i class="bi bi-calendar-event me-2"></i>Thông tin học kỳ
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Học kỳ:</strong>
                                                <span class="badge bg-info ms-2">@(Model.MaHocKyNavigation?.TenHocKy ?? "N/A")</span>
                                            </p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Năm học:</strong>
                                                <span class="badge bg-success ms-2">@(Model.MaHocKyNavigation?.NamHoc ?? "N/A")</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin kết quả -->
                        <div class="col-12 mb-4">
                            <div class="card border-0 bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-primary mb-3">
                                        <i class="bi bi-star-fill me-2"></i>Kết quả học tập
                                    </h6>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Điểm trung bình:</strong>
                                                @if (Model.DiemTrungBinh.HasValue)
                                                {
                                                    var diem = Model.DiemTrungBinh.Value;
                                                    string badgeClass = diem >= 8.0m ? "bg-success" : 
                                                                       diem >= 6.5m ? "bg-warning" : 
                                                                       diem >= 5.0m ? "bg-info" : "bg-danger";
                                                    <span class="badge @badgeClass ms-2 fs-6">@diem.ToString("F1")</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary ms-2">Chưa có điểm</span>
                                                }
                                            </p>
                                        </div>
                                        <div class="col-md-6">
                                            <p class="mb-2">
                                                <strong>Mã kết quả:</strong>
                                                <span class="badge bg-dark ms-2">@Model.MaKetQua</span>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Ghi chú -->
                        @if (!string.IsNullOrEmpty(Model.GhiChu))
                        {
                            <div class="col-12 mb-4">
                                <div class="card border-0 bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-primary mb-3">
                                            <i class="bi bi-chat-text me-2"></i>Ghi chú
                                        </h6>
                                        <p class="mb-0">@Model.GhiChu</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="d-flex gap-3 justify-content-center">
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                    <i class="bi bi-arrow-left me-2"></i>Quay lại danh sách
                                </a>
                                @if (canManage)
                                {
                                    <a asp-action="Edit" asp-route-id="@Model.MaKetQua" class="btn btn-warning btn-lg px-4">
                                        <i class="bi bi-pencil me-2"></i>Sửa kết quả
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@Model.MaKetQua" class="btn btn-danger btn-lg px-4">
                                        <i class="bi bi-trash me-2"></i>Xóa kết quả
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .badge {
        font-size: 0.9em;
        padding: 0.5em 0.8em;
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-1px);
    }
</style>
