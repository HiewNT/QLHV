@model QLHV.Models.KetQuaHocTap
@{
    ViewData["Title"] = "Thêm kết quả học tập";
    var userRole = Context.Session.GetString("UserRole") ?? string.Empty;
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-gradient rounded-circle p-3 me-3">
                        <i class="bi bi-plus-circle-fill text-white fs-4"></i>
                    </div>
                    <div>
                        <h2 class="text-dark mb-1 fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted mb-0">Nhập thông tin kết quả học tập mới</p>
                    </div>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Validation Errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-danger border-0 shadow-sm">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-2">Có lỗi xảy ra!</h6>
                            <ul class="mb-0 ps-3">
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Main Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Thông tin kết quả học tập
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" novalidate class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Học viên Selection -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="MaNguoi" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-2 text-primary"></i>Học viên
                                </label>
                                <select asp-for="MaNguoi" class="form-select form-select-lg" asp-items="ViewBag.MaNguoi" required>
                                    <option value="">-- Chọn học viên --</option>
                                </select>
                                <span asp-validation-for="MaNguoi" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Chọn học viên cần thêm kết quả học tập
                                </div>
                            </div>
                        </div>

                        <!-- Năm học và Điểm trung bình -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="NamHoc" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-2 text-primary"></i>Năm học
                                </label>
                                <select asp-for="NamHoc" class="form-select form-select-lg" required>
                                    @if (ViewBag.NamHocOptions != null)
                                    {
                                        foreach (var n in (IEnumerable<string>)ViewBag.NamHocOptions)
                                        {
                                            <option value="@n" selected="@(Model?.NamHoc == n)">@n</option>
                                        }
                                    }
                                    else
                                    {
                                        <option value="">Không có năm học</option>
                                    }
                                </select>
                                <span asp-validation-for="NamHoc" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DiemTrungBinh" class="form-label fw-semibold">
                                    <i class="bi bi-star-fill me-2 text-primary"></i>Điểm trung bình
                                </label>
                                <div class="input-group input-group-lg">
                                    <input asp-for="DiemTrungBinh" class="form-control" inputmode="decimal" 
                                           placeholder="Ví dụ: 8.5" required />
                                    <span class="input-group-text bg-light">
                                        <i class="bi bi-123 text-muted"></i>
                                    </span>
                                </div>
                                <span asp-validation-for="DiemTrungBinh" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-lightbulb me-1"></i>Hỗ trợ cả dấu chấm (.) và dấu phẩy (,)
                                </div>
                            </div>
                        </div>

                        <!-- Ghi chú -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="GhiChu" class="form-label fw-semibold">
                                    <i class="bi bi-chat-text me-2 text-primary"></i>Ghi chú
                                </label>
                                <textarea asp-for="GhiChu" class="form-control" rows="4" 
                                          placeholder="Nhập ghi chú nếu cần..."></textarea>
                                <span asp-validation-for="GhiChu" class="text-danger small"></span>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-3 justify-content-end pt-3 border-top">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                        <i class="bi bi-x-circle me-2"></i>Hủy
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-4 shadow-sm">
                                        <i class="bi bi-check-circle me-2"></i>Lưu kết quả
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Enhanced form validation and UX
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form');
            const submitBtn = form.querySelector('button[type="submit"]');
            
            // Real-time validation feedback
            form.addEventListener('input', function(e) {
                const field = e.target;
                if (field.hasAttribute('required') && field.value.trim() === '') {
                    field.classList.add('is-invalid');
                } else {
                    field.classList.remove('is-invalid');
                }
            });
            
            // Form submission enhancement
            form.addEventListener('submit', function(e) {
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                }
                
                // Show loading state
                submitBtn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Đang lưu...';
                submitBtn.disabled = true;
            });
            
            // Auto-focus first field
            const firstField = form.querySelector('select, input, textarea');
            if (firstField) firstField.focus();
        });
        
        // Debug info
        console.log('Create View Debug:', {
            model: @Html.Raw(Json.Serialize(Model)),
            viewBag: {
                maNguoi: @Html.Raw(Json.Serialize(ViewBag.MaNguoi)),
                namHocOptions: @Html.Raw(Json.Serialize(ViewBag.NamHocOptions)),
                nguoiQuocTichMap: @Html.Raw(ViewBag.NguoiQuocTichMap ?? "{}")
            }
        });
    </script>
}


