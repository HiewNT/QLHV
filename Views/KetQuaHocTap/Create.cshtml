@model QLHV.Models.KetQuaHocTapViewModel
@{
    ViewData["Title"] = "Thêm kết quả học tập";
    var userRole = Context.Session.GetString("UserRole") ?? string.Empty;
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div class="d-flex align-items-center">
                    <div class="bg-primary bg-gradient rounded-circle p-3 me-3">
                        <i class="bi bi-plus-circle-fill text-white fs-4"></i>
                    </div>
                    <div>
                        <h2 class="text-dark mb-1 fw-bold">@ViewData["Title"]</h2>
                        <p class="text-muted mb-0">Nhập thông tin kết quả học tập mới</p>
                    </div>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left me-2"></i>Quay lại
                </a>
            </div>
        </div>
    </div>

    <!-- Validation Errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="alert alert-danger border-0 shadow-sm">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill fs-4 me-3"></i>
                        <div>
                            <h6 class="alert-heading mb-2">Có lỗi xảy ra!</h6>
                            <ul class="mb-0 ps-3">
                                @foreach (var modelState in ViewData.ModelState.Values)
                                {
                                    foreach (var error in modelState.Errors)
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Main Form -->
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-7">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Thông tin kết quả học tập
                    </h5>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" novalidate class="needs-validation">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <!-- Học viên Selection -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="MaNguoi" class="form-label fw-semibold">
                                    <i class="bi bi-person-badge me-2 text-primary"></i>Học viên
                                </label>
                                <select asp-for="MaNguoi" class="form-select form-select-lg" asp-items="ViewBag.MaNguoi" required>
                                    <option value="">-- Chọn học viên --</option>
                                </select>
                                <span asp-validation-for="MaNguoi" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Chọn học viên cần thêm kết quả học tập
                                </div>
                            </div>
                        </div>

                        <!-- Học kỳ và Điểm trung bình -->
                        <div class="row mb-4">
                            <div class="col-md-6">
                                <label asp-for="MaHocKy" class="form-label fw-semibold">
                                    <i class="bi bi-calendar-event me-2 text-primary"></i>Học kỳ
                                </label>
                                <select asp-for="MaHocKy" class="form-select form-select-lg" asp-items="ViewBag.MaHocKy" required>
                                    <option value="">-- Chọn học kỳ --</option>
                                </select>
                                <span asp-validation-for="MaHocKy" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Chọn học kỳ cần thêm kết quả
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="DiemTrungBinh" class="form-label fw-semibold">
                                    <i class="bi bi-star-fill me-2 text-primary"></i>Điểm trung bình
                                </label>
                                <input asp-for="DiemTrungBinh" class="form-control form-control-lg" type="text" placeholder="Nhập điểm từ 0-10 (VD: 8.5 hoặc 8,5)" required />
                                <span asp-validation-for="DiemTrungBinh" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Nhập điểm trung bình (0.0 - 10.0), có thể dùng dấu phẩy hoặc dấu chấm
                                </div>
                            </div>
                        </div>

                        <!-- Ghi chú -->
                        <div class="row mb-4">
                            <div class="col-12">
                                <label asp-for="GhiChu" class="form-label fw-semibold">
                                    <i class="bi bi-chat-text me-2 text-primary"></i>Ghi chú
                                </label>
                                <textarea asp-for="GhiChu" class="form-control" rows="4" placeholder="Nhập ghi chú (nếu có)"></textarea>
                                <span asp-validation-for="GhiChu" class="text-danger small"></span>
                                <div class="form-text">
                                    <i class="bi bi-info-circle me-1"></i>Ghi chú bổ sung về kết quả học tập
                                </div>
                            </div>
                        </div>

                        <!-- Submit Buttons -->
                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex gap-3 justify-content-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                        <i class="bi bi-x-circle me-2"></i>Hủy bỏ
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg px-4">
                                        <i class="bi bi-check-circle me-2"></i>Lưu kết quả
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        $(document).ready(function() {
            // Custom validation for decimal input with comma and dot support
            $('#DiemTrungBinh').on('input', function() {
                var value = $(this).val();
                if (value !== '') {
                    // Replace comma with dot for parsing
                    var normalizedValue = value.replace(',', '.');
                    var numValue = parseFloat(normalizedValue);
                    if (isNaN(numValue) || numValue < 0 || numValue > 10) {
                        $(this).addClass('is-invalid');
                        if (!$(this).next('.invalid-feedback').length) {
                            $(this).after('<div class="invalid-feedback">Điểm phải từ 0 đến 10</div>');
                        }
                    } else {
                        $(this).removeClass('is-invalid');
                        $(this).next('.invalid-feedback').remove();
                    }
                }
            });

            // Auto-format decimal input - support both comma and dot
            $('#DiemTrungBinh').on('blur', function() {
                var value = $(this).val();
                if (value !== '') {
                    // Replace comma with dot for parsing
                    var normalizedValue = value.replace(',', '.');
                    var numValue = parseFloat(normalizedValue);
                    if (!isNaN(numValue)) {
                        // Format with dot as decimal separator
                        $(this).val(numValue.toFixed(1));
                    }
                }
            });

            // Allow comma input
            $('#DiemTrungBinh').on('keypress', function(e) {
                // Allow numbers, comma, dot, backspace, delete, arrow keys
                if ((e.which >= 48 && e.which <= 57) || // numbers
                    e.which === 44 || // comma
                    e.which === 46 || // dot
                    e.which === 8 ||  // backspace
                    e.which === 9 ||  // tab
                    e.which === 13 || // enter
                    e.which === 37 || // left arrow
                    e.which === 39 || // right arrow
                    e.which === 46) { // delete
                    return true;
                }
                return false;
            });

            // Cập nhật dropdown học kỳ khi chọn học viên
            $('#MaNguoi').on('change', function() {
                var selectedNguoi = $(this).val();
                var hocKyDropdown = $('#MaHocKy');
                
                if (selectedNguoi) {
                    // Gọi AJAX để lấy danh sách học kỳ chưa có kết quả
                    $.ajax({
                        url: '@Url.Action("GetAvailableHocKy", "KetQuaHocTap")',
                        type: 'GET',
                        data: { maNguoi: selectedNguoi },
                        success: function(data) {
                            hocKyDropdown.empty();
                            hocKyDropdown.append('<option value="">-- Chọn học kỳ --</option>');
                            
                            $.each(data, function(index, item) {
                                hocKyDropdown.append('<option value="' + item.value + '">' + item.text + '</option>');
                            });
                        },
                        error: function() {
                            console.log('Lỗi khi tải danh sách học kỳ');
                        }
                    });
                } else {
                    // Reset dropdown nếu không chọn học viên
                    hocKyDropdown.empty();
                    hocKyDropdown.append('<option value="">-- Chọn học kỳ --</option>');
                }
            });
        });
    </script>
}


