@model IEnumerable<QLHV.Models.KetQuaHocTap>
@{
    ViewData["Title"] = "Kết quả học tập";
    var userRole = ViewBag.UserRole as string ?? string.Empty;
    bool canManage = userRole == "Admin" || userRole == "LopTruongLao" || userRole == "LopTruongCam";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 text-primary">
                        <i class="bi bi-mortarboard me-3"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-muted mb-0">
                        @if (userRole == "LopTruongLao") 
                        {<text>Quản lý kết quả học tập của học viên Lào</text>} 
                        else if (userRole == "LopTruongCam") 
                        {<text>Quản lý kết quả học tập của học viên Campuchia</text>} 
                        else if (userRole == "Admin")
                        {<text>Quản lý kết quả học tập của tất cả học viên</text>}
                        else 
                        {<text>Xem kết quả học tập</text>}
                    </p>
                </div>
                @if (canManage)
                {
                    <a asp-action="Create" class="btn btn-primary btn-lg px-4">
                        <i class="bi bi-plus-circle me-2"></i>Thêm kết quả mới
                    </a>
                }
            </div>
        </div>
    </div>



    <!-- Main Table Card -->
    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-white border-0 py-3" style="border-radius: 15px 15px 0 0;">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary">
                    <i class="bi bi-table me-2"></i>Danh sách kết quả học tập
                </h5>
                <div class="d-flex gap-2 align-items-center">
                    <div class="d-flex gap-2">
                        @if (userRole != "LopTruongLao" && userRole != "LopTruongCam")
                        {
                            <div class="btn-group" role="group" aria-label="Quốc tịch">
                                <input type="radio" class="btn-check" name="qtFilter" id="qtAll" autocomplete="off" checked>
                                <label class="btn btn-outline-secondary btn-sm" for="qtAll">Tất cả</label>
                                <input type="radio" class="btn-check" name="qtFilter" id="qtLao" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm" for="qtLao">Lào</label>
                                <input type="radio" class="btn-check" name="qtFilter" id="qtCam" autocomplete="off">
                                <label class="btn btn-outline-secondary btn-sm" for="qtCam">Campuchia</label>
                            </div>
                        }
                        
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button" id="hocKyDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-funnel me-1"></i>Học kỳ
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="hocKyDropdown">
                                <li><a class="dropdown-item" href="#" data-hoc-ky="">Tất cả học kỳ</a></li>
                                @if (ViewBag.HocKyList != null)
                                {
                                    @foreach (var hocKy in ViewBag.HocKyList)
                                    {
                                        <li><a class="dropdown-item" href="#" data-hoc-ky="@hocKy.MaHocKy">@hocKy.TenHocKy - @hocKy.NamHoc</a></li>
                                    }
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="ketQuaTable" class="table table-hover align-middle mb-0" style="width:100%">
                    <thead class="bg-light">
                        <tr>
                            <th class="fw-bold text-primary border-0 py-3">Học viên</th>
                            <th class="fw-bold text-primary border-0 py-3">Học kỳ</th>
                            <th class="fw-bold text-primary border-0 py-3">Năm học</th>
                            <th class="fw-bold text-primary border-0 py-3">Điểm TB</th>
                            <th class="fw-bold text-primary border-0 py-3">Ghi chú</th>
                            @if (canManage)
                            {
                                <th class="fw-bold text-primary border-0 py-3 text-center" style="width:120px">Thao tác</th>
                            }
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    
    <style>
        .table tbody tr {
            transition: all 0.2s ease;
            border-bottom: 1px solid #e9ecef;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9ff !important;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,123,255,0.1);
        }
        
        .table td {
            padding: 15px 12px;
            vertical-align: middle;
            border: none;
        }
        
        .btn-group .btn {
            border-radius: 6px !important;
            transition: all 0.2s ease;
            margin: 0 1px;
        }
        
        .btn-group .btn:hover {
            transform: scale(1.05);
        }
        
        .card {
            transition: all 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
        }
        
        /* DataTables custom styling */
        .dataTables_wrapper .dataTables_info {
            padding-top: 1rem;
            padding-left: 1.5rem;
            color: #6c757d;
        }
        
        .dataTables_wrapper .dataTables_paginate {
            padding-top: 1rem;
            padding-right: 1.5rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            border-radius: 6px !important;
            margin: 0 2px;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%) !important;
            border-color: #0d6efd !important;
        }

        .dataTables_wrapper .dataTables_length {
            padding-top: 1rem;
            padding-left: 1.5rem;
        }
        
        .dataTables_wrapper .dataTables_filter {
            padding-top: 1rem;
            padding-right: 1.5rem;
        }
        
        .dataTables_wrapper .dataTables_filter input {
            border-radius: 6px;
            border: 1px solid #dee2e6;
        }
        
        .dataTables_wrapper .dataTables_length select {
            border-radius: 6px;
            border: 1px solid #dee2e6;
        }

        @@keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .fade-in {
            animation: fade-in 0.3s ease forwards;
        }
    </style>
    
    <script>
        let dataTable;
        let currentQuocTich = '';
        let currentHocKy = '';
        
        $(document).ready(function() {
            dataTable = $('#ketQuaTable').DataTable({
                "processing": true,
                "serverSide": false,
                "ajax": {
                    "url": "@Url.Action("GetData")",
                    "type": "GET",
                    "data": function(d) {
                        d.quocTich = currentQuocTich;
                        d.maHocKy = currentHocKy;
                    }
                },
                "columns": [
                    { "data": "hoTen" },
                    { "data": "hocKy" },
                    { "data": "namHoc" },
                    { 
                        "data": "diemTrungBinh",
                        "render": function(data) {
                            if (data !== null && data !== undefined) {
                                return `<span class="badge bg-primary px-3 py-2">${data}</span>`;
                            }
                            return '<span class="badge bg-light text-dark px-3 py-2">N/A</span>';
                        }
                    },
                    { 
                        "data": "ghiChu",
                        "render": function(data) {
                            return data || '<span class="text-muted">Không có</span>';
                        }
                    },
                    @if (canManage)
                    {
                        <text>
                        {
                            "data": "maKetQua",
                            "render": function(data, type, row) {
                                return '<div class="btn-group btn-group-sm d-flex justify-content-center" role="group">' +
                                    '<a href="@Url.Action("Details")/' + data + '" class="btn btn-outline-info shadow-sm" title="Chi tiết" style="border-radius: 6px;">' +
                                    '<i class="bi bi-eye"></i></a>' +
                                    '<a href="@Url.Action("Edit")/' + data + '" class="btn btn-outline-primary shadow-sm" title="Sửa" style="border-radius: 6px;">' +
                                    '<i class="bi bi-pencil"></i></a>' +
                                    '<a href="@Url.Action("Delete")/' + data + '" class="btn btn-outline-danger shadow-sm" title="Xóa" style="border-radius: 6px;">' +
                                    '<i class="bi bi-trash"></i></a>' +
                                    '</div>';
                            },
                            "orderable": false
                        }
                        </text>
                    }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json"
                },
                "pageLength": 25,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Tất cả"]],
                "responsive": true,
                "scrollX": true,
                "order": [[0, "asc"]],
                "drawCallback": function() {
                    // Add animation to newly loaded rows
                    $('#ketQuaTable tbody tr').each(function(index) {
                        $(this).css('animation-delay', (index * 0.05) + 's');
                        $(this).addClass('fade-in');
                    });
                    
                    // Update statistics
                    updateStatistics();
                }
            });

            // Xử lý bộ lọc quốc tịch
            $('input[name="qtFilter"]').change(function() {
                if (this.id === 'qtAll') {
                    currentQuocTich = '';
                } else if (this.id === 'qtLao') {
                    currentQuocTich = 'Lào';
                } else if (this.id === 'qtCam') {
                    currentQuocTich = 'Campuchia';
                }
                dataTable.ajax.reload();
            });

            // Xử lý bộ lọc học kỳ
            $('.dropdown-item[data-hoc-ky]').click(function(e) {
                e.preventDefault();
                currentHocKy = $(this).data('hoc-ky');
                $('#hocKyDropdown').text($(this).text());
                dataTable.ajax.reload();
            });

            function updateStatistics() {
                var data = dataTable.data().toArray();
                $('#totalKetQua').text(data.length);
                
                var uniqueHocVien = [...new Set(data.map(item => item.maNguoi))];
                $('#totalHocVien').text(uniqueHocVien.length);
                
                // Tìm học kỳ hiện tại (có thể cần điều chỉnh logic này)
                if (data.length > 0) {
                    var currentHocKyData = data.find(item => item.hocKy && item.namHoc);
                    if (currentHocKyData) {
                        $('#hocKyHienTai').text(currentHocKyData.hocKy + ' - ' + currentHocKyData.namHoc);
                    } else {
                        $('#hocKyHienTai').text('N/A');
                    }
                } else {
                    $('#hocKyHienTai').text('0');
                }
            }
        });
    </script>
}




