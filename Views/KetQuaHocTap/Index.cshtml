@model IEnumerable<QLHV.Models.KetQuaHocTap>
@{
    ViewData["Title"] = "Kết quả học tập";
}

<div class="container-fluid py-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1 text-primary">
                        <i class="bi bi-mortarboard me-3"></i>@ViewData["Title"]
                    </h2>
                    <p class="text-muted mb-0">Quản lý kết quả học tập của học viên theo năm học</p>
                </div>
                <a asp-action="Create" class="btn btn-primary btn-lg px-4">
                    <i class="bi bi-plus-circle me-2"></i>Thêm kết quả mới
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-primary bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-mortarboard text-primary fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-primary mb-1" id="totalKetQua">-</h4>
                    <p class="text-muted mb-0">Tổng kết quả</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-success bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-people text-success fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-success mb-1" id="totalHocVien">-</h4>
                    <p class="text-muted mb-0">Học viên</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-warning bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-star text-warning fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-warning mb-1" id="diemTrungBinh">-</h4>
                    <p class="text-muted mb-0">Điểm TB chung</p>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100" style="border-radius: 15px;">
                <div class="card-body text-center">
                    <div class="d-flex align-items-center justify-content-center mb-3">
                        <div class="bg-info bg-opacity-10 p-3 rounded-circle">
                            <i class="bi bi-calendar-year text-info fs-1"></i>
                        </div>
                    </div>
                    <h4 class="text-info mb-1" id="namHocHienTai">-</h4>
                    <p class="text-muted mb-0">Năm học hiện tại</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Table Card -->
    <div class="card border-0 shadow-sm" style="border-radius: 15px;">
        <div class="card-header bg-white border-0 py-3" style="border-radius: 15px 15px 0 0;">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0 text-primary">
                    <i class="bi bi-table me-2"></i>Danh sách kết quả học tập
                </h5>
                <div class="d-flex gap-2">
                    <button class="btn btn-outline-primary btn-sm" onclick="table.ajax.reload()">
                        <i class="bi bi-arrow-clockwise me-1"></i>Làm mới
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="ketQuaTable" class="table table-hover mb-0" style="width:100%">
                    <thead class="table-primary">
                        <tr>
                            <th class="text-center" style="width: 80px">Mã</th>
                            <th style="width: 120px">Mã học viên</th>
                            <th>Họ và tên</th>
                            <th class="text-center" style="width: 120px">Năm học</th>
                            <th class="text-center" style="width: 120px">Điểm TB</th>
                            <th>Ghi chú</th>
                            <th class="text-center" style="width: 150px">Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script>
        let table;
        
        $(document).ready(function() {
            table = $('#ketQuaTable').DataTable({
                ajax: {
                    url: '@Url.Action("GetData")',
                    type: 'GET',
                    datatype: 'json',
                    dataSrc: function(json) {
                        updateStatistics(json.data);
                        return json.data;
                    }
                },
                columns: [
                    { 
                        data: 'maKetQua',
                        className: 'text-center fw-bold'
                    },
                    { 
                        data: 'maNguoi',
                        className: 'fw-semibold'
                    },
                    { 
                        data: 'hoTen',
                        className: 'fw-semibold'
                    },
                    { 
                        data: 'namHoc',
                        className: 'text-center',
                        render: function(data) {
                            return data ? `<span class="badge bg-info">${data}</span>` : '<span class="text-muted">-</span>';
                        }
                    },
                    { 
                        data: 'diemTrungBinh',
                        className: 'text-center',
                        render: function(data) {
                            if (!data) return '<span class="text-muted">-</span>';
                            const diem = parseFloat(data);
                            let badgeClass = 'bg-secondary';
                            if (diem >= 8.0) badgeClass = 'bg-success';
                            else if (diem >= 6.5) badgeClass = 'bg-warning';
                            else if (diem >= 5.0) badgeClass = 'bg-info';
                            else badgeClass = 'bg-danger';
                            
                            return `<span class="badge ${badgeClass} fs-6">${diem.toFixed(1)}</span>`;
                        }
                    },
                    { 
                        data: 'ghiChu',
                        render: function(data) {
                            if (!data) return '<span class="text-muted">Không có ghi chú</span>';
                            return data.length > 50 ? data.substring(0, 50) + '...' : data;
                        }
                    },
                    {
                        data: 'maKetQua',
                        orderable: false,
                        className: 'text-center',
                        render: function(data) {
                            return `
                                <div class="btn-group btn-group-sm">
                                    <a href="@Url.Action("Details")/${data}" class="btn btn-outline-primary" title="Xem chi tiết">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit")/${data}" class="btn btn-outline-warning" title="Sửa">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a href="@Url.Action("Delete")/${data}" class="btn btn-outline-danger" title="Xóa">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>`;
                        }
                    }
                ],
                language: { 
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json',
                    search: "Tìm kiếm:",
                    lengthMenu: "Hiển thị _MENU_ bản ghi",
                    info: "Hiển thị _START_ đến _END_ trong tổng số _TOTAL_ bản ghi",
                    infoEmpty: "Không có bản ghi nào",
                    infoFiltered: "(được lọc từ _MAX_ bản ghi)",
                    zeroRecords: "Không tìm thấy bản ghi nào"
                },
                pageLength: 10,
                order: [[0, 'desc']],
                responsive: true,
                dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                     '<"row"<"col-sm-12"tr>>' +
                     '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
                drawCallback: function() {
                    // Thêm hiệu ứng hover cho các nút
                    $('.btn-group .btn').hover(
                        function() { $(this).addClass('shadow-sm'); },
                        function() { $(this).removeClass('shadow-sm'); }
                    );
                }
            });
        });

        function updateStatistics(data) {
            const totalKetQua = data.length;
            const uniqueHocVien = [...new Set(data.map(item => item.maNguoi))].length;
            
            // Tính điểm trung bình chung
            const validDiem = data.filter(item => item.diemTrungBinh != null);
            const diemTrungBinh = validDiem.length > 0 
                ? (validDiem.reduce((sum, item) => sum + parseFloat(item.diemTrungBinh), 0) / validDiem.length).toFixed(1)
                : 0;
            
            // Lấy năm học hiện tại (năm hiện tại - 1)
            const currentYear = new Date().getFullYear();
            const namHocHienTai = `${currentYear - 1}-${currentYear}`;

            $('#totalKetQua').text(totalKetQua);
            $('#totalHocVien').text(uniqueHocVien);
            $('#diemTrungBinh').text(diemTrungBinh);
            $('#namHocHienTai').text(namHocHienTai);
        }
    </script>
}

<style>
    .card {
        transition: all 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-2px);
    }
    
    .btn {
        border-radius: 8px;
        transition: all 0.3s ease;
    }
    
    .btn:hover {
        transform: translateY(-1px);
    }
    
    .table th {
        border-top: none;
        font-weight: 600;
        background-color: #e3f2fd !important;
    }
    
    .table td {
        vertical-align: middle;
    }
    
    .badge {
        font-size: 0.75em;
    }
    
    .btn-group .btn {
        border-radius: 6px !important;
    }
    
    .dataTables_wrapper .dataTables_length select,
    .dataTables_wrapper .dataTables_filter input {
        border-radius: 8px;
        border: 1px solid #dee2e6;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button {
        border-radius: 6px;
        margin: 0 2px;
    }
    
    .dataTables_wrapper .dataTables_paginate .paginate_button.current {
        background: #0d6efd !important;
        border-color: #0d6efd !important;
    }
    
    .rounded-circle {
        width: 60px;
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>

