@model QLHV.Models.Nguoi
@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-info">
            <i class="bi bi-person-vcard me-2"></i>@ViewData["Title"]
        </h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.MaNguoi" class="btn btn-outline-primary">
                <i class="bi bi-pencil me-1"></i>Sửa
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Quay lại
            </a>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow border-0 mb-4">
                <div class="card-header bg-light py-3">
                    <h5 class="card-title mb-0 text-info">
                        <i class="bi bi-person-lines-fill me-2"></i>Thông tin cá nhân
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Mã nhân viên:</dt>
                        <dd class="col-sm-8">@Model.MaNguoi</dd>
                        <dt class="col-sm-4">Họ và tên:</dt>
                        <dd class="col-sm-8">@Model.HoTen</dd>
                        <dt class="col-sm-4">Ngày sinh:</dt>
                        <dd class="col-sm-8">@(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Cấp bậc:</dt>
                        <dd class="col-sm-8">@(Model.CapBac ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Chức vụ:</dt>
                        <dd class="col-sm-8">@(Model.ChucVu ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Trình độ:</dt>
                        <dd class="col-sm-8">@(Model.MaTrinhDoNavigation?.TenTrinhDo ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Trường học:</dt>
                        <dd class="col-sm-8">@(Model.TruongHoc ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Qua trường:</dt>
                        <dd class="col-sm-8">@(Model.QuaTruong)</dd>
                        <dt class="col-sm-4">Năm nhập ngũ:</dt>
                        <dd class="col-sm-8">@(Model.NamNhapNgu?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                        <dt class="col-sm-4">Ngày tốt nghiệp:</dt>
                        <dd class="col-sm-8">@(Model.NgayTotNghiep?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card shadow border-0 mb-3">
                <div class="card-header bg-light py-2">
                    <h6 class="mb-0 text-info"><i class="bi bi-award me-2"></i>Thông tin Đảng</h6>
                </div>
                <div class="card-body">
                    <dl class="mb-0">
                        <dt>Loại đảng viên:</dt>
                        <dd>@(Model.MaLoaiDangVienNavigation?.TenLoai ?? "Không là đảng viên")</dd>
                        <dt>Ngày vào Đảng dự bị:</dt>
                        <dd>@(Model.NgayVaoDangDuBi?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                        <dt>Ngày vào Đảng chính thức:</dt>
                        <dd>@(Model.NgayVaoDangChinhThuc?.ToString("dd/MM/yyyy") ?? "Chưa có thông tin")</dd>
                    </dl>
                </div>
            </div>
            <div class="card shadow border-0">
                <div class="card-header bg-light py-2">
                    <h6 class="mb-0 text-info"><i class="bi bi-bar-chart me-2"></i>Thống kê</h6>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Khen thưởng:</span>
                        <span class="badge bg-success">@(Model.KhenThuongNguois?.Count ?? 0)</span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <span>Kỷ luật:</span>
                        <span class="badge bg-warning">@(Model.KyLuatNguois?.Count ?? 0)</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model.KhenThuongNguois?.Any() == true || Model.KyLuatNguois?.Any() == true)
    {
        <div class="row mt-4">
            @if (Model.KhenThuongNguois?.Any() == true)
            {
                <div class="col-md-6">
                    <div class="card shadow border-0">
                        <div class="card-header bg-light py-2">
                            <h6 class="mb-0 text-success"><i class="bi bi-trophy me-2"></i>Danh sách khen thưởng</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Ngày</th>
                                            <th>Cấp</th>
                                            <th>Lý do</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kt in Model.KhenThuongNguois)
                                        {
                                            <tr>
                                                <td>@(kt.NgayKhenThuong?.ToString("dd/MM/yyyy"))</td>
                                                <td>@kt.MaKhenThuongNavigation?.CapKhenThuong</td>
                                                <td>@kt.LyDo</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
            @if (Model.KyLuatNguois?.Any() == true)
            {
                <div class="col-md-6">
                    <div class="card shadow border-0">
                        <div class="card-header bg-light py-2">
                            <h6 class="mb-0 text-warning"><i class="bi bi-flag me-2"></i>Danh sách kỷ luật</h6>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Ngày</th>
                                            <th>Mức độ</th>
                                            <th>Lý do</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kl in Model.KyLuatNguois)
                                        {
                                            <tr>
                                                <td>@(kl.NgayKyLuat?.ToString("dd/MM/yyyy"))</td>
                                                <td>@kl.MaKyLuatNavigation?.MucDo</td>
                                                <td>@kl.LyDo</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
