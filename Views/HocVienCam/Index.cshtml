@{
    ViewData["Title"] = "Danh sách học viên Campuchia";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="mb-1 text-primary fw-bold">
                <i class="bi bi-flag me-2"></i>@ViewData["Title"]
            </h2>
            <p class="text-muted mb-0">Quản lý thông tin học viên Campuchia trong hệ thống</p>
        </div>
        <a asp-action="Create" class="btn btn-success shadow-sm" style="border-radius: 8px;">
            <i class="bi bi-plus-circle me-1"></i>Thêm học viên Campuchia
        </a>
    </div>

    <!-- Bộ lọc -->
    <div class="card shadow-sm border-0 mb-4" style="border-radius: 15px;">
        <div class="card-header bg-light border-0" style="border-radius: 15px 15px 0 0;">
            <h6 class="card-title mb-0 text-primary">
                <i class="bi bi-funnel me-2"></i>Bộ lọc tìm kiếm
            </h6>
        </div>
        <div class="card-body">
            <form id="filterForm">
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Họ và tên</label>
                        <input type="text" class="form-control" id="hoTenFilter" placeholder="Nhập họ tên...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Cấp bậc</label>
                        <input type="text" class="form-control" id="capBacFilter" placeholder="Nhập cấp bậc...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Chuyên ngành</label>
                        <input type="text" class="form-control" id="chuyenNganhFilter" placeholder="Nhập chuyên ngành...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Khóa học</label>
                        <input type="text" class="form-control" id="khoaHocFilter" placeholder="Nhập khóa học...">
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Trình độ</label>
                        <select class="form-select" id="trinhDoFilter">
                            <option value="">Tất cả trình độ</option>
                            @foreach (var trinhDo in ViewBag.MaTrinhDo ?? new List<SelectListItem>())
                            {
                                <option value="@trinhDo.Value">@trinhDo.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Loại Đảng viên</label>
                        <select class="form-select" id="loaiDangVienFilter">
                            <option value="">Tất cả loại Đảng viên</option>
                            @foreach (var loaiDangVien in ViewBag.MaLoaiDangVien ?? new List<SelectListItem>())
                            {
                                <option value="@loaiDangVien.Value">@loaiDangVien.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label fw-bold text-muted">Đoàn viên</label>
                        <select class="form-select" id="doanVienFilter">
                            <option value="">Tất cả</option>
                            <option value="true">Có</option>
                            <option value="false">Không</option>
                        </select>
                    </div>

                </div>
                <div class="row mt-3">
                    <div class="col-12">
                        <button type="button" class="btn btn-outline-secondary" id="clearFilter">
                            <i class="bi bi-x-circle me-1"></i>Xóa bộ lọc
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm border-0" style="border-radius: 15px;">
        <div class="card-header bg-primary text-white border-0" style="border-radius: 15px 15px 0 0;">
            <h5 class="card-title mb-0">
                <i class="bi bi-table me-2"></i>Danh sách học viên Campuchia
            </h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="hocVienCamTable" class="table table-hover align-middle mb-0" style="width:100%">
                    <thead class="bg-light">
                        <tr>
                            <th class="fw-bold text-primary border-0 py-3">Họ và tên</th>
                            <th class="fw-bold text-primary border-0 py-3">Ngày sinh</th>
                            <th class="fw-bold text-primary border-0 py-3">Cấp bậc</th>
                            <th class="fw-bold text-primary border-0 py-3">Trình độ</th>
                            <th class="fw-bold text-primary border-0 py-3">Chuyên ngành đào tạo</th>
                            <th class="fw-bold text-primary border-0 py-3">Khóa</th>
                            <th class="fw-bold text-primary border-0 py-3">Ngày nhập học</th>
                            <th class="fw-bold text-primary border-0 py-3">Ngày tốt nghiệp</th>
                            <th class="fw-bold text-primary border-0 py-3">Loại Đảng viên</th>
                            <th class="fw-bold text-primary border-0 py-3">Đoàn viên</th>
                            <th class="fw-bold text-primary border-0 py-3 text-center">Thao tác</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css">
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/locale/vi.min.js"></script>
    
    <style>
        .table tbody tr {
            transition: all 0.2s ease;
            border-bottom: 1px solid #e9ecef;
        }
        
        .table tbody tr:hover {
            background-color: #f8f9ff !important;
            transform: translateY(-1px);
            box-shadow: 0 2px 8px rgba(0,123,255,0.1);
        }
        
        .table td {
            padding: 15px 12px;
            vertical-align: middle;
            border: none;
        }
        
        .btn-group .btn {
            border-radius: 6px !important;
            transition: all 0.2s ease;
            margin: 0 1px;
        }
        
        .btn-group .btn:hover {
            transform: scale(1.05);
        }
        
        .card {
            transition: all 0.3s ease;
        }
        
        .card:hover {
            transform: translateY(-2px);
        }
        
        /* DataTables custom styling */
        .dataTables_wrapper .dataTables_info {
            padding-top: 1rem;
            padding-left: 1.5rem;
            color: #6c757d;
        }
        
        .dataTables_wrapper .dataTables_paginate {
            padding-top: 1rem;
            padding-right: 1.5rem;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            border-radius: 6px !important;
            margin: 0 2px;
        }
        
        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: linear-gradient(135deg, #0d6efd 0%, #0056b3 100%) !important;
            border-color: #0d6efd !important;
        }
        
        .dataTables_wrapper .dataTables_length {
            padding-top: 1rem;
            padding-left: 1.5rem;
        }
        
        .dataTables_wrapper .dataTables_filter {
            padding-top: 1rem;
            padding-right: 1.5rem;
        }
        
        .dataTables_wrapper .dataTables_filter input {
            border-radius: 6px;
            border: 1px solid #dee2e6;
        }
        
        .dataTables_wrapper .dataTables_length select {
            border-radius: 6px;
            border: 1px solid #dee2e6;
        }

        keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(10px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        .fade-in {
            animation: fade-in 0.3s ease forwards;
        }
    </style>
    
    <script>
        let dataTable;
        
        $(document).ready(function() {
            dataTable = $('#hocVienCamTable').DataTable({
                "processing": true,
                "serverSide": false,
                "ajax": {
                    "url": "@Url.Action("GetData")",
                    "type": "GET",
                    "data": function(d) {
                        // Thêm các tham số lọc vào request
                        d.hoTen = $('#hoTenFilter').val();
                        d.capBac = $('#capBacFilter').val();
                        d.chuyenNganh = $('#chuyenNganhFilter').val();
                        d.khoaHoc = $('#khoaHocFilter').val();
                        d.maTrinhDo = $('#trinhDoFilter').val();
                        d.maLoaiDangVien = $('#loaiDangVienFilter').val();
                        d.doanVien = $('#doanVienFilter').val();
                    }
                },
                "columns": [
                    { "data": "hoTen" },
                    { 
                        "data": "ngaySinh",
                        "render": function(data) {
                            return data ? `<span class="text-muted">${moment(data).format('DD/MM/YYYY')}</span>` : '';
                        }
                    },
                    { "data": "capBac" },
                    { "data": "trinhDo" },
                    { "data": "chuyenNganh" },
                    { "data": "khoaHoc" },
                    { 
                        "data": "ngayNhapHoc",
                        "render": function(data) {
                            return data ? `<span class="text-muted">${moment(data).format('DD/MM/YYYY')}</span>` : '';
                        }
                    },
                    { 
                        "data": "ngayTotNghiep",
                        "render": function(data) {
                            return data ? `<span class="text-muted">${moment(data).format('DD/MM/YYYY')}</span>` : '';
                        }
                    },
                    { 
                        "data": "loaiDangVien",
                        "render": function(data) {
                            return data ? `<span class="badge bg-info px-3 py-2">${data}</span>` : '';
                        }
                    },
                    { 
                        "data": "doanVien",
                        "render": function(data) {
                            if (data === true) {
                                return '<span class="badge bg-success px-3 py-2"><i class="bi bi-check-circle me-1"></i>Có</span>';
                            } else if (data === false) {
                                return '<span class="badge bg-secondary px-3 py-2"><i class="bi bi-x-circle me-1"></i>Không</span>';
                            } else {
                                return '<span class="badge bg-light text-dark px-3 py-2">N/A</span>';
                            }
                        }
                    },
                    {
                        "data": "maNguoi",
                        "render": function(data, type, row) {
                            return '<div class="btn-group btn-group-sm d-flex justify-content-center" role="group">' +
                                '<a href="@Url.Action("Details")/' + data + '" class="btn btn-outline-info shadow-sm" title="Chi tiết" style="border-radius: 6px;">' +
                                '<i class="bi bi-eye"></i></a>' +
                                '<a href="@Url.Action("Edit")/' + data + '" class="btn btn-outline-primary shadow-sm" title="Sửa" style="border-radius: 6px;">' +
                                '<i class="bi bi-pencil"></i></a>' +
                                '<a href="@Url.Action("Delete")/' + data + '" class="btn btn-outline-danger shadow-sm" title="Xóa" style="border-radius: 6px;">' +
                                '<i class="bi bi-trash"></i></a>' +
                                '</div>';
                        },
                        "orderable": false
                    }
                ],
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json"
                },
                "pageLength": 25,
                "lengthMenu": [[10, 25, 50, 100, -1], [10, 25, 50, 100, "Tất cả"]],
                "responsive": true,
                "scrollX": true,
                "order": [[0, "asc"]],
                "drawCallback": function() {
                    // Add animation to newly loaded rows
                    $('#hocVienCamTable tbody tr').each(function(index) {
                        $(this).css('animation-delay', (index * 0.05) + 's');
                        $(this).addClass('fade-in');
                    });
                }
            });

            // Xử lý sự kiện xóa bộ lọc
            $('#clearFilter').click(function() {
                $('#filterForm')[0].reset();
                dataTable.ajax.reload();
            });

            // Lọc tự động khi người dùng nhập
            $('#filterForm input, #filterForm select').on('input change', function() {
                dataTable.ajax.reload();
            });
        });
    </script>
}